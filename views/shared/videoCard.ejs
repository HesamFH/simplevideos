<% videos.forEach(video => { %>
<div class="col-md-4 col-6 mt-2">
  <div class="card h-100">
    <div class="card-img-top d-flex justify-content-center">
      <img src="<%= video.thumbnail %>" alt="Video thumbnail" class="img-fluid img-thumbnail" />
    </div>
    <div class="card-body d-flex flex-column justify-content-around">
      <h5 class="d-flex justify-content-center"><a href="/video/<%= video._id %>"><%= video.videoTitle %></a></h5>
      <div class="d-flex justify-content-around align-items-center">
        <p class="text-muted"><%= video.views %> بازدید</p>
        <p class="badge badge-success py-2"><%= convertDate(video.createdAt) %></p>
      </div>
    </div>
  </div>
</div>
<% }) %>