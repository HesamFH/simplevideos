<div class="row p-2">
  <div class="col-lg-8 col-12">
    <div class="d-flex flex-column text-center align-items-center">
      <h2 class="mb-2"><%= video.videoTitle %></h2>
      <video id="video-player" controls class="video-js">
        <source src="/playvideo/<%= videoId  %>" type="video/mp4">
      </video>
    </div>
    <div class="border mt-2 p-2 radius-10">
      <h4>توضیحات : </h4>
      <p>
        <% if (video.videoDescription) { %>
        <%= video.videoDescription %>
        <% } else { %>
        این ویدیو توضیحات ندارد
        <% } %>
      </p>
    </div>
    <div class="d-flex radius-10 align-items-center justify-content-between border p-2">
      <p class="my-auto">بارگذاری شده توسط <strong title="<%= user.username %>"><%= truncateString(user.username, 20) %></strong></p>
      <p class="badge badge-success py-1 my-auto"><%= convertDate(video.createdAt) %> </p>
      <p class="my-auto"><%= video.views %> بازدید</p>
    </div>
  </div>
  <div class="col-12 col-lg-4 p-2 radius-10 mt-2 border">
    <h4>دیگر ویدیوها :</h4>
    <%- include("./shared/otherVideos.ejs") %>
  </div>
</div>